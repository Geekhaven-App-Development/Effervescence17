<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/sponsor_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/sponsor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignTop="@+id/sponsor_image"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/sponsor_image"
        android:text="Sponsor's Name" />

    <TextView
        android:id="@+id/sponsor_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignStart="@+id/sponsor_name"
        android:layout_below="@+id/sponsor_name"
        android:layout_marginTop="12dp"
        android:text="categories" />
</RelativeLayout>